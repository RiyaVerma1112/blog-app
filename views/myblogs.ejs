<%- include("partials/header.ejs") %>
<div class="main_con">
    <div class="btn_con">
        <form action="/writeBlog" method="post">
            <input type="submit" id="btn_create" value="create"/>
        </form>
    </div>

    <div class="blog_con">
        <% let index = 0 ; %> <% blogs.forEach(blog => { %>
        <div class="blog">
        <h2><%= blog.tittle %></h2>
        <p>Author: <%= blog.author%></p>
        <p><%= blog.content.slice(0,40) %>...</p>
        <p>Date:<%= blog.date %></p>
            <div class="btns">
               
                <form action="/view-blog" method="get">
                  <input type="hidden" name="blogIndex" value="<%= index %>" />
                  <input type="submit" value="View" />
                </form>
      
                
                <form action="/editPage" method="post">
                  <input type="hidden" name="blogIndex" value="<%= index %>" />
                  <input type="submit" value="Edit" />
                </form>
      
                
                <form action="/delete-blog" method="post">
                  <input type="hidden" name="blogIndex" value="<%= index %>" />
                  <input type="submit" value="Delete" />
                </form>
              </div>
      
              <%index++%>

        </div>    
        <% }); %>
    </div>
</div>

<%- include("partials/footer.ejs") %>